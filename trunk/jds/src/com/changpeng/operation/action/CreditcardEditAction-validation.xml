<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
  		"-//OpenSymphony Group//XWork Validator 1.0//EN"
  		"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
      <field name="creditcard.username">
        <field-validator type="required">
            <message>请输入客户姓名!</message>
        </field-validator>
    </field>
    <field name="creditcard.creditcard">
        <field-validator type="required">
            <message>请输入账号!</message>
        </field-validator>
    </field>
    <field name="creditcard.idcard">
        <field-validator type="required">
            <message>请输入证件号码!</message>
        </field-validator>
    </field>
</validators> 
