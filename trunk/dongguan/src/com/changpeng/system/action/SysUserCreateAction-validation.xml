<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
  		"-//OpenSymphony Group//XWork Validator 1.0//EN"
  		"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
		<field name="groupname">
                <field-validator type="requiredstring">
                  <message>请选择部门！</message>
                </field-validator>
	</field>
	<field name="sysUser.username">
                <field-validator type="requiredstring">
                  <message>请输入此用户的姓名！</message>
                </field-validator>
              
	</field>
	<field name="sysUser.loginname">
                <field-validator type="requiredstring">
                  <message>请输入此用户的系统登录名！</message>
                </field-validator>
                <!--<field-validator type="stringlength">
                  <param name="minLength">1</param>
                  <param name="maxLength">100</param>
                  <message><![CDATA[ 客户名称不能多于50个汉字 100个字母!]]></message>
                </field-validator>-->
	</field>
	<field name="sysUser.password">
                <field-validator type="requiredstring">
                  <message>请输入此用户的系统登录密码！</message>
                </field-validator>
                <field-validator type="stringlength">
                  <param name="minLength">5</param>
                  <param name="maxLength">20</param>
                  <message><![CDATA[ 密码长度必须介于5到20之间!]]></message>
                </field-validator>
              
	</field>
	<field name="passagain">
                <field-validator type="requiredstring">
                  <message>请再次输入系统登录密码！</message>
                </field-validator>
                <field-validator type="fieldexpression">
                   <param name="expression">
                   	  <![CDATA[(passagain == sysUser.password)]]></param>
		        	<message><![CDATA[ 两次输入的密码必须一致 ]]></message>
                </field-validator>	
                </field>
	
</validators>
